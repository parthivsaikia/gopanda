{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "NodeNext", // Outputs ES Modules (as .js files)
    "target": "ES2022" // Ensure target is appropriate for NodeNext
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
